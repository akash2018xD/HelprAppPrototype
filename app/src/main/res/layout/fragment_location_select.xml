<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationSelect">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2/4"
            android:textColor="#757575"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where Are You?"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <fragment
            android:layout_marginTop="20dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context=".MapsActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_marginTop="50dp"
                       android:layout_marginLeft="20dp">
                    <ImageView
                        android:layout_gravity="center_horizontal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/mapzoomout"
                    android:src="@drawable/map_zoomout" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zoom Out"
                        android:textColor="#757575"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        />
                   </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="50dp"
                        android:layout_alignParentRight="true">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/map_zoomin"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/map_zoomin"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zoom In"
                            android:textColor="#757575"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="180dp"
                    android:orientation="vertical">
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/map_locate"
                    android:src="@drawable/map_locate"
                    android:layout_gravity="center_horizontal"
                   />

                </LinearLayout>
                <Button
                    android:id="@+id/loaction_select_next"
                    android:layout_gravity="center_horizontal"
                    android:text="Next >"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_button"/>
            </LinearLayout>
        </fragment>
    </LinearLayout>
</FrameLayout>