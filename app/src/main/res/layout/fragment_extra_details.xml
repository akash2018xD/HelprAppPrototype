<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExtraDetails">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Step 4/4"
           android:textColor="#757575"
           android:textStyle="bold"
           android:textSize="15dp"
           android:layout_marginTop="5dp"
           android:layout_gravity="center_horizontal"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Add A Few More Details"
           android:layout_marginTop="10dp"
           android:layout_gravity="center_horizontal"
           android:textSize="25dp"
           android:textStyle="bold"
           android:textColor="#000000"/>
       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:textSize="15dp"
           android:layout_marginTop="50dp"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:textStyle="bold"
           android:layout_gravity="center_horizontal"
           android:textColor="#FFFFFF"
           android:background="@drawable/text_background"
           android:text="Add a brief description of the situation"/>
       <android.support.design.widget.TextInputLayout
           android:layout_marginTop="20dp"
           android:id="@+id/empidwrapper"
           android:layout_gravity="center_horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
           <EditText
               android:hint="Describe The Situation"
               android:layout_width="260dp"
               android:layout_height="70dp"
               android:inputType="text"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="100dp"/>
       </android.support.design.widget.TextInputLayout>

       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:textSize="15dp"
           android:layout_marginTop="40dp"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:textStyle="bold"
           android:layout_gravity="center_horizontal"
           android:textColor="#FFFFFF"
           android:background="@drawable/text_background"
           android:text="Can You Stay With The Animal ?"/>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <ImageView
                   android:layout_gravity="center_horizontal"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@drawable/yes_logo"/>
               <CheckBox
                   android:layout_marginTop="5dp"
                   android:text="Yes"
                   android:textStyle="bold"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/checkBoxYes"
                   android:layout_gravity="center_horizontal"
                   />
           </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="100dp"
                >
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/no_logo"/>
                <CheckBox
                    android:layout_marginTop="5dp"
                    android:text="No"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBoxNo"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

        </LinearLayout>
       <Button
           android:id="@+id/submit_data"
           android:layout_gravity="center_horizontal"
           android:text="Submit"
           android:textStyle="bold"
           android:textColor="#FFFFFF"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="50dp"
           android:background="@drawable/rounded_button"/>
   </LinearLayout>

</FrameLayout>